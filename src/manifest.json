{
  "manifest_version": 3,
  "name": "ScreenShooter",
  "version": "1.0",
  "description": "Create screenshots with editing capabilities",
  "permissions": ["tabs", "storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [],
  "icons": {
    "16": "icons/icon-s.png",
    "48": "icons/icon-m.png",
    "128": "icons/icon-l.png"
  }
}
